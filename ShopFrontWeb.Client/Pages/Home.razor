@using Backend = ShopFrontBackend.Systems
@page "/"

<PageTitle>Home</PageTitle>

<MudGrid Spacing="2" Justify="Justify.Center">
    @foreach (var product in products)
    {
        <MudItem>
            <MudCard>
                <MudCardMedia Image="@product.Image" Height="200" />
                <MudCardContent>
                    <MudText Typo="Typo.h5">@product.Title</MudText>
                    <MudText Typo="Typo.body2">@product.Price</MudText>
                    <MudText Typo="Typo.body2">@product.Category</MudText>
                    <MudText Typo="Typo.body2">@product.Description</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary">Add to Cart</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>

@code{
    List<Backend.Product> products = Backend.FakeStoreAPI.FetchProducts();

}